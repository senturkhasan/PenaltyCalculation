
@model InputData
@{ ViewData["Title"] = "Index"; }
<br />


<div class="container">
    <h2>Calculate Book day</h2>
    <form asp-controller="Country" asp-action="Index" method="post">
        <div class="form-group row">
            <!--<select asp-for="Name" asp-items=@ViewBag.countries class="form-control form-control-sm js-example-basic-multiple" multiple="multiple" required>
                <option disabled selected value="">Country select..</option>
            </select>-->
            <select asp-for="Name" asp-items=@ViewBag.countries class="form-control form-control" required>
                <option disabled selected value="">Select Country..</option>
            </select>
        </div>
        <div class="form-group row">
            <label for="example-datetime-local-input" class="col-sm-2 col-form-label">Checked out date</label>
            <div class="col-sm-10">
                <input class="form-control" type="datetime-local" asp-for="CheckedDate" value="" id="example-datetime-local-input" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-datetime-local-input" class="col-sm-2 col-form-label">Returned date</label>
            <div class="col-sm-10">
                <input class="form-control" type="datetime-local" asp-for="ReturnedDate" value="" id="example-datetime-local-input" required>
            </div>
        </div>
        <input type="submit" value="Calculate" class="btn btn-outline-primary float-right" />
    </form>
</div>